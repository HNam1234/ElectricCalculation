<Window x:Class="ElectricCalculation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ElectricCalculation.ViewModels"
        mc:Ignorable="d"
        Title="Electric Calculation" Height="600" Width="1100">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Kỳ tính:" VerticalAlignment="Center" Margin="0,0,8,0" />
            <TextBox Width="150"
                     VerticalAlignment="Center"
                     Text="{Binding PeriodLabel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Thêm dòng"
                    Margin="16,0,0,0"
                    Padding="12,4"
                    Command="{Binding AddRowCommand}" />
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Readings}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tên khách"
                                    Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="2*" />
                <DataGridTextColumn Header="Nhóm/Đơn vị"
                                    Binding="{Binding GroupName, UpdateSourceTrigger=PropertyChanged}" Width="2*" />
                <DataGridTextColumn Header="Loại"
                                    Binding="{Binding Category, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                <DataGridTextColumn Header="Địa chỉ"
                                    Binding="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Width="2*" />
                <DataGridTextColumn Header="Số ĐT"
                                    Binding="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                <DataGridTextColumn Header="Số công tơ"
                                    Binding="{Binding MeterNumber, UpdateSourceTrigger=PropertyChanged}" Width="*" />

                <DataGridTextColumn Header="Chỉ số cũ"
                                    Binding="{Binding PreviousIndex, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" Width="*" />
                <DataGridTextColumn Header="Chỉ số mới"
                                    Binding="{Binding CurrentIndex, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" Width="*" />
                <DataGridTextColumn Header="Hệ số"
                                    Binding="{Binding Multiplier, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Width="*" />
                <DataGridTextColumn Header="Bao cấp (kWh)"
                                    Binding="{Binding SubsidizedKwh, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" Width="*" />
                <DataGridTextColumn Header="Đơn giá (VNĐ/kWh)"
                                    Binding="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" Width="*" />

                <DataGridTextColumn Header="Điện năng (kWh)" IsReadOnly="True"
                                    Binding="{Binding Consumption, StringFormat=N0}" Width="*" />
                <DataGridTextColumn Header="Điện phải trả (kWh)" IsReadOnly="True"
                                    Binding="{Binding ChargeableKwh, StringFormat=N0}" Width="*" />
                <DataGridTextColumn Header="Thành tiền (VNĐ)" IsReadOnly="True"
                                    Binding="{Binding Amount, StringFormat=N0}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

