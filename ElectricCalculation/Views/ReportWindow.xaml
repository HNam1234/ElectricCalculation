<Window x:Class="ElectricCalculation.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behaviors="clr-namespace:ElectricCalculation.Behaviors"
        xmlns:converters="clr-namespace:ElectricCalculation.Converters"
        xmlns:sys="clr-namespace:System.Windows;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="540"
        Width="1000"
        WindowStartupLocation="CenterOwner"
        behaviors:DialogCloser.DialogResult="{Binding DialogResult}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:RatioToLengthConverter x:Key="RatioToLengthConverter" />
        <converters:DoubleToRightThicknessConverter x:Key="ScrollBarWidthToRightMargin" />
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header + metric selector -->
        <Grid Grid.Row="0"
              Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{Binding Title}"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" />

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBlock Text="Thống kê theo:"
                           Margin="0,0,4,0" />
                <ComboBox Width="120"
                          ItemsSource="{Binding Metrics}"
                          SelectedItem="{Binding SelectedMetric, Mode=TwoWay}" />
            </StackPanel>
        </Grid>

        <!-- Main content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Left: charts -->
            <Grid Grid.Column="0"
                  Margin="0,0,12,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="{Binding YAxisLabel, StringFormat='Đơn vị: {0}'}"
                           FontWeight="Bold"
                           Margin="0,0,0,4" />

                <Grid Grid.Row="1">
                    <!-- Two overlapped charts; toggled via Visibility -->
                    <Grid>
                        <!-- kWh chart -->
                         <Border BorderBrush="LightGray"
                                 BorderThickness="1"
                                 Visibility="{Binding ShowKwh, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="220" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="90" />
                                </Grid.ColumnDefinitions>

                                <!-- X-axis ticks -->
                                <Border Grid.Row="0" Grid.Column="1" Margin="0,0,0,8">
                                    <Grid Margin="{Binding Source={x:Static sys:SystemParameters.VerticalScrollBarWidth}, Converter={StaticResource ScrollBarWidthToRightMargin}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding KwhTick0}" FontSize="9" HorizontalAlignment="Left" />
                                        <TextBlock Grid.Column="0" Text="{Binding KwhTick25}" FontSize="9" HorizontalAlignment="Right" />
                                        <TextBlock Grid.Column="1" Text="{Binding KwhTick50}" FontSize="9" HorizontalAlignment="Right" />
                                        <TextBlock Grid.Column="2" Text="{Binding KwhTick75}" FontSize="9" HorizontalAlignment="Right" />
                                        <TextBlock Grid.Column="3" Text="{Binding KwhTick100}" FontSize="9" HorizontalAlignment="Right" />
                                    </Grid>
                                </Border>

                                <!-- Bars -->
                                <ScrollViewer Grid.Row="1"
                                              Grid.ColumnSpan="3"
                                              VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="220" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="90" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding GroupName}"
                                                               FontSize="11"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding GroupName}"
                                                               VerticalAlignment="Center" />

                                                    <Grid Grid.Column="1"
                                                          x:Name="PlotArea"
                                                          Height="22"
                                                          VerticalAlignment="Center">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>

                                                        <Border Grid.Column="1" BorderBrush="#FFE5E7EB" BorderThickness="1,0,0,0" />
                                                        <Border Grid.Column="2" BorderBrush="#FFE5E7EB" BorderThickness="1,0,0,0" />
                                                        <Border Grid.Column="3" BorderBrush="#FFE5E7EB" BorderThickness="1,0,0,0" />
                                                        <Border Grid.ColumnSpan="4" BorderBrush="#FFE5E7EB" BorderThickness="0,0,1,0" />

                                                        <Border Grid.ColumnSpan="4"
                                                                HorizontalAlignment="Left"
                                                                Height="16"
                                                                VerticalAlignment="Center"
                                                                ToolTip="{Binding TotalConsumption, StringFormat=N0}">
                                                            <Border.Width>
                                                                <MultiBinding Converter="{StaticResource RatioToLengthConverter}">
                                                                    <Binding Path="KwhBarRatio" />
                                                                    <Binding ElementName="PlotArea" Path="ActualWidth" />
                                                                </MultiBinding>
                                                            </Border.Width>
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="SteelBlue" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                            <Setter Property="Background" Value="Red" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </Grid>

                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding TotalConsumption, StringFormat=N0}"
                                                               HorizontalAlignment="Right"
                                                               VerticalAlignment="Center"
                                                               FontSize="11" />
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- Amount chart -->
                         <Border BorderBrush="LightGray"
                                 BorderThickness="1"
                                 Visibility="{Binding ShowAmount, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="220" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="110" />
                                </Grid.ColumnDefinitions>

                                <!-- X-axis ticks -->
                                <Border Grid.Row="0" Grid.Column="1" Margin="0,0,0,8">
                                    <Grid Margin="{Binding Source={x:Static sys:SystemParameters.VerticalScrollBarWidth}, Converter={StaticResource ScrollBarWidthToRightMargin}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding AmountTick0}" FontSize="9" HorizontalAlignment="Left" />
                                        <TextBlock Grid.Column="0" Text="{Binding AmountTick25}" FontSize="9" HorizontalAlignment="Right" />
                                        <TextBlock Grid.Column="1" Text="{Binding AmountTick50}" FontSize="9" HorizontalAlignment="Right" />
                                        <TextBlock Grid.Column="2" Text="{Binding AmountTick75}" FontSize="9" HorizontalAlignment="Right" />
                                        <TextBlock Grid.Column="3" Text="{Binding AmountTick100}" FontSize="9" HorizontalAlignment="Right" />
                                    </Grid>
                                </Border>

                                <!-- Bars -->
                                <ScrollViewer Grid.Row="1"
                                              Grid.ColumnSpan="3"
                                              VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="220" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="110" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding GroupName}"
                                                               FontSize="11"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding GroupName}"
                                                               VerticalAlignment="Center" />

                                                    <Grid Grid.Column="1"
                                                          x:Name="PlotArea"
                                                          Height="22"
                                                          VerticalAlignment="Center">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>

                                                        <Border Grid.Column="1" BorderBrush="#FFE5E7EB" BorderThickness="1,0,0,0" />
                                                        <Border Grid.Column="2" BorderBrush="#FFE5E7EB" BorderThickness="1,0,0,0" />
                                                        <Border Grid.Column="3" BorderBrush="#FFE5E7EB" BorderThickness="1,0,0,0" />
                                                        <Border Grid.ColumnSpan="4" BorderBrush="#FFE5E7EB" BorderThickness="0,0,1,0" />

                                                        <Border Grid.ColumnSpan="4"
                                                                HorizontalAlignment="Left"
                                                                Height="16"
                                                                VerticalAlignment="Center"
                                                                ToolTip="{Binding TotalAmount, StringFormat=N0}">
                                                            <Border.Width>
                                                                <MultiBinding Converter="{StaticResource RatioToLengthConverter}">
                                                                    <Binding Path="AmountBarRatio" />
                                                                    <Binding ElementName="PlotArea" Path="ActualWidth" />
                                                                </MultiBinding>
                                                            </Border.Width>
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="SteelBlue" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                            <Setter Property="Background" Value="Red" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </Grid>

                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding TotalAmount, StringFormat=N0}"
                                                               HorizontalAlignment="Right"
                                                               VerticalAlignment="Center"
                                                               FontSize="11" />
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Right: summary table -->
            <DataGrid x:Name="StatsGrid"
                      Grid.Column="1"
                      ItemsSource="{Binding Items}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nhóm / Đơn vị"
                                        Binding="{Binding GroupName}"
                                        Width="2*" />
                    <DataGridTextColumn Header="Số khách"
                                        Binding="{Binding CustomerCount}"
                                        Width="*" />
                    <DataGridTextColumn Header="Tổng kWh"
                                        Binding="{Binding TotalConsumption, StringFormat=N0}"
                                        Width="*" />
                    <DataGridTextColumn Header="kWh tính tiền"
                                        Binding="{Binding TotalChargeableKwh, StringFormat=N0}"
                                        Width="*" />
                    <DataGridTextColumn Header="Tổng tiền (VNĐ)"
                                        Binding="{Binding TotalAmount, StringFormat=N0}"
                                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Totals + print/close -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <TextBlock Margin="0,0,16,0"
                           Text="{Binding GrandTotalConsumption, StringFormat='Tổng kWh: {0:N0}'}" />
                <TextBlock Margin="0,0,16,0"
                           Text="{Binding GrandTotalChargeableKwh, StringFormat='kWh tính tiền: {0:N0}'}" />
                <TextBlock Margin="0,0,16,0"
                           Text="{Binding GrandTotalAmount, StringFormat='Tổng tiền: {0:N0} VNĐ'}" />
            </StackPanel>

            <Button Content="In hóa đơn nhóm"
                    Width="120"
                    Margin="0,0,8,0"
                    Command="{Binding PrintGroupCommand}" />

            <Button Content="Đóng"
                    Width="90"
                    Command="{Binding CloseCommand}" />
        </StackPanel>
    </Grid>
</Window>
