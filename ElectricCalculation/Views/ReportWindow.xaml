<Window x:Class="ElectricCalculation.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="540"
        Width="1000"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Tiêu đề + chọn kiểu thống kê -->
        <Grid Grid.Row="0"
              Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{Binding Title}"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" />

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBlock Text="Thống kê theo:"
                           Margin="0,0,4,0" />
                <ComboBox Width="120"
                          ItemsSource="{Binding Metrics}"
                          SelectedItem="{Binding SelectedMetric, Mode=TwoWay}" />
            </StackPanel>
        </Grid>

        <!-- Nội dung chính -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Bên trái: biểu đồ -->
            <Grid Grid.Column="0"
                  Margin="0,0,12,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="{Binding YAxisLabel, StringFormat='Đơn vị: {0}'}"
                           FontWeight="Bold"
                           Margin="0,0,0,4" />

                <Grid Grid.Row="1">
                    <!-- Hai chart chồng lên nhau, bật tắt bằng Visibility -->
                    <Grid>
                        <!-- Biểu đồ theo kWh -->
                        <Border BorderBrush="LightGray"
                                BorderThickness="1"
                                Visibility="{Binding ShowKwh, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Disabled">
                                <Grid Margin="4">
                                    <Grid.ColumnDefinitions>
                                        <!-- Nhãn trục tung -->
                                        <ColumnDefinition Width="60" />
                                        <!-- Vùng vẽ cột -->
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <!-- Cột + trục -->
                                        <RowDefinition Height="*" />
                                        <!-- Nhãn trục hoành -->
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Trục tung kWh -->
                                    <Grid Grid.Row="0"
                                          Grid.Column="0"
                                          Margin="0,0,4,16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Text="{Binding KwhTick100}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding KwhTick75}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding KwhTick50}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.Row="3"
                                                   Text="{Binding KwhTick25}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.Row="4"
                                                   Text="{Binding KwhTick0}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Bottom"
                                                   Margin="0,0,2,-2" />
                                    </Grid>

                                    <!-- Vùng cột kWh -->
                                    <Grid Grid.Row="0"
                                          Grid.Column="1"
                                          Margin="0,0,0,16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <!-- Các đường kẻ ngang -->
                                        <Border Grid.Row="0"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.Row="1"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.Row="2"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.Row="3"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.Row="4"
                                                BorderBrush="#FFB0B0B0"
                                                BorderThickness="0,1,0,1" />

                                        <!-- Trục tung -->
                                        <Border Grid.RowSpan="5"
                                                HorizontalAlignment="Left"
                                                BorderBrush="#FF808080"
                                                BorderThickness="1,0,0,0" />

                                        <!-- Các cột -->
                                        <ItemsControl Grid.RowSpan="5"
                                                      Margin="6,0,0,0"
                                                      ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <UniformGrid Rows="1"
                                                                 VerticalAlignment="Bottom" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Margin="4,0"
                                                            Height="{Binding KwhBarHeight}">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="SteelBlue" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsSelected}"
                                                                                 Value="True">
                                                                        <Setter Property="Background" Value="Red" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>

                                    <!-- Nhãn trục hoành: tên nhóm / đơn vị -->
                                    <ItemsControl Grid.Row="1"
                                                  Grid.Column="1"
                                                  Margin="6,0,0,0"
                                                  ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Rows="1" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding GroupName}"
                                                           Margin="4,2,4,0"
                                                           TextWrapping="Wrap"
                                                           FontSize="9"
                                                           TextAlignment="Center" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </ScrollViewer>
                        </Border>

                        <!-- Biểu đồ theo tiền -->
                        <Border BorderBrush="LightGray"
                                BorderThickness="1"
                                Visibility="{Binding ShowAmount, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Disabled">
                                <Grid Margin="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Trục tung tiền -->
                                    <Grid Grid.Row="0"
                                          Grid.Column="0"
                                          Margin="0,0,4,16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Text="{Binding AmountTick100}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding AmountTick75}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding AmountTick50}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.Row="3"
                                                   Text="{Binding AmountTick25}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.Row="4"
                                                   Text="{Binding AmountTick0}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Bottom"
                                                   Margin="0,0,2,-2" />
                                    </Grid>

                                    <!-- Vùng cột tiền -->
                                    <Grid Grid.Row="0"
                                          Grid.Column="1"
                                          Margin="0,0,0,16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Border Grid.Row="0"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.Row="1"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.Row="2"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.Row="3"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.Row="4"
                                                BorderBrush="#FFB0B0B0"
                                                BorderThickness="0,1,0,1" />

                                        <Border Grid.RowSpan="5"
                                                HorizontalAlignment="Left"
                                                BorderBrush="#FF808080"
                                                BorderThickness="1,0,0,0" />

                                        <ItemsControl Grid.RowSpan="5"
                                                      Margin="6,0,0,0"
                                                      ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <UniformGrid Rows="1"
                                                                 VerticalAlignment="Bottom" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Margin="4,0"
                                                            Height="{Binding AmountBarHeight}">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="SteelBlue" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsSelected}"
                                                                                 Value="True">
                                                                        <Setter Property="Background" Value="Red" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>

                                    <!-- Nhãn trục hoành -->
                                    <ItemsControl Grid.Row="1"
                                                  Grid.Column="1"
                                                  Margin="6,0,0,0"
                                                  ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Rows="1" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding GroupName}"
                                                           Margin="4,2,4,0"
                                                           TextWrapping="Wrap"
                                                           FontSize="9"
                                                           TextAlignment="Center" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Bên phải: bảng thống kê -->
            <DataGrid x:Name="StatsGrid"
                      Grid.Column="1"
                      ItemsSource="{Binding Items}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nhóm / Đơn vị"
                                        Binding="{Binding GroupName}"
                                        Width="2*" />
                    <DataGridTextColumn Header="Số khách"
                                        Binding="{Binding CustomerCount}"
                                        Width="*" />
                    <DataGridTextColumn Header="Tổng kWh"
                                        Binding="{Binding TotalConsumption, StringFormat=N0}"
                                        Width="*" />
                    <DataGridTextColumn Header="kWh tính tiền"
                                        Binding="{Binding TotalChargeableKwh, StringFormat=N0}"
                                        Width="*" />
                    <DataGridTextColumn Header="Tổng tiền (VNĐ)"
                                        Binding="{Binding TotalAmount, StringFormat=N0}"
                                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Tổng cộng + nút in/đóng -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <TextBlock Margin="0,0,16,0"
                           Text="{Binding GrandTotalConsumption, StringFormat='Tổng kWh: {0:N0}'}" />
                <TextBlock Margin="0,0,16,0"
                           Text="{Binding GrandTotalChargeableKwh, StringFormat='kWh tính tiền: {0:N0}'}" />
                <TextBlock Margin="0,0,16,0"
                           Text="{Binding GrandTotalAmount, StringFormat='Tổng tiền: {0:N0} VNĐ'}" />
            </StackPanel>

            <Button Content="In Excel nhóm"
                    Width="120"
                    Margin="0,0,8,0"
                    Click="PrintGroupButton_Click" />

            <Button Content="Đóng"
                    Width="90"
                    Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>

