<Window x:Class="ElectricCalculation.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behaviors="clr-namespace:ElectricCalculation.Behaviors"
        xmlns:converters="clr-namespace:ElectricCalculation.Converters"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="540"
        Width="1000"
        WindowStartupLocation="CenterOwner"
        behaviors:DialogCloser.DialogResult="{Binding DialogResult}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:RatioToHeightConverter x:Key="RatioToHeightConverter" />
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header + metric selector -->
        <Grid Grid.Row="0"
              Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{Binding Title}"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center" />

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBlock Text="Thống kê theo:"
                           Margin="0,0,4,0" />
                <ComboBox Width="120"
                          ItemsSource="{Binding Metrics}"
                          SelectedItem="{Binding SelectedMetric, Mode=TwoWay}" />
            </StackPanel>
        </Grid>

        <!-- Main content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- Left: charts -->
            <Grid Grid.Column="0"
                  Margin="0,0,12,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="{Binding YAxisLabel, StringFormat='Đơn vị: {0}'}"
                           FontWeight="Bold"
                           Margin="0,0,0,4" />

                <Grid Grid.Row="1">
                    <!-- Two overlapped charts; toggled via Visibility -->
                    <Grid>
                        <!-- kWh chart -->
                        <Border BorderBrush="LightGray"
                                BorderThickness="1"
                                Visibility="{Binding ShowKwh, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Disabled">
                                <Grid Margin="4">
                                    <Grid.ColumnDefinitions>
                                        <!-- Y-axis labels -->
                                        <ColumnDefinition Width="60" />
                                        <!-- Plot area -->
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <!-- Bars + axes -->
                                        <RowDefinition Height="*" />
                                        <!-- X-axis labels -->
                                        <RowDefinition Height="160" />
                                    </Grid.RowDefinitions>

                                    <!-- kWh Y-axis -->
                                    <Grid Grid.Row="0"
                                          Grid.Column="0"
                                          Margin="0,0,4,16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Text="{Binding KwhTick100}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding KwhTick75}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding KwhTick50}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.Row="3"
                                                   Text="{Binding KwhTick25}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.RowSpan="4"
                                                   Text="{Binding KwhTick0}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Bottom"
                                                   Margin="0,0,2,-2" />
                                    </Grid>

                                    <!-- kWh bar area -->
                                    <Grid Grid.Row="0"
                                          Grid.Column="1"
                                          Margin="0,0,0,16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <!-- Grid lines -->
                                        <Border Grid.Row="0"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.Row="1"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.Row="2"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.Row="3"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.RowSpan="4"
                                                BorderBrush="#FFB0B0B0"
                                                BorderThickness="0,0,0,1" />

                                        <!-- Y-axis -->
                                        <Border Grid.RowSpan="4"
                                                HorizontalAlignment="Left"
                                                BorderBrush="#FF808080"
                                                BorderThickness="1,0,0,0" />

                                        <!-- Bars -->
                                        <ItemsControl Grid.RowSpan="4"
                                                      Margin="6,0,0,0"
                                                      ItemsSource="{Binding Items}"
                                                      VerticalAlignment="Stretch">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"
                                                                VerticalAlignment="Stretch" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="2,0"
                                                          Width="16"
                                                          Height="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=ActualHeight}">
                                                        <Border VerticalAlignment="Bottom">
                                                            <Border.Height>
                                                                <MultiBinding Converter="{StaticResource RatioToHeightConverter}">
                                                                    <Binding Path="KwhBarRatio" />
                                                                    <Binding RelativeSource="{RelativeSource AncestorType=ItemsControl}" Path="ActualHeight" />
                                                                </MultiBinding>
                                                            </Border.Height>
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="SteelBlue" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsSelected}"
                                                                                     Value="True">
                                                                            <Setter Property="Background" Value="Red" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>

                                    <!-- X-axis labels: group/unit -->
                                    <ItemsControl Grid.Row="1"
                                                  Grid.Column="1"
                                                  Margin="6,0,0,0"
                                                  ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Width="16"
                                                        Height="150"
                                                        Margin="2,2,2,0"
                                                        ClipToBounds="True">
                                                    <TextBlock Text="{Binding GroupName}"
                                                               FontSize="9"
                                                               TextWrapping="NoWrap"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding GroupName}">
                                                        <TextBlock.LayoutTransform>
                                                            <RotateTransform Angle="-90" />
                                                        </TextBlock.LayoutTransform>
                                                    </TextBlock>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </ScrollViewer>
                        </Border>

                        <!-- Amount chart -->
                        <Border BorderBrush="LightGray"
                                BorderThickness="1"
                                Visibility="{Binding ShowAmount, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Disabled">
                                <Grid Margin="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="160" />
                                    </Grid.RowDefinitions>

                                    <!-- Amount Y-axis -->
                                    <Grid Grid.Row="0"
                                          Grid.Column="0"
                                          Margin="0,0,4,16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Text="{Binding AmountTick100}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding AmountTick75}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding AmountTick50}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.Row="3"
                                                   Text="{Binding AmountTick25}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,-4,2,0" />
                                        <TextBlock Grid.RowSpan="4"
                                                   Text="{Binding AmountTick0}"
                                                   FontSize="9"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Bottom"
                                                   Margin="0,0,2,-2" />
                                    </Grid>

                                    <!-- Amount bar area -->
                                    <Grid Grid.Row="0"
                                          Grid.Column="1"
                                          Margin="0,0,0,16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Border Grid.Row="0"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.Row="1"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.Row="2"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.Row="3"
                                                BorderBrush="#FFE0E0E0"
                                                BorderThickness="0,1,0,0" />
                                        <Border Grid.RowSpan="4"
                                                BorderBrush="#FFB0B0B0"
                                                BorderThickness="0,0,0,1" />

                                        <Border Grid.RowSpan="4"
                                                HorizontalAlignment="Left"
                                                BorderBrush="#FF808080"
                                                BorderThickness="1,0,0,0" />

                                        <ItemsControl Grid.RowSpan="4"
                                                      Margin="6,0,0,0"
                                                      ItemsSource="{Binding Items}"
                                                      VerticalAlignment="Stretch">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"
                                                                VerticalAlignment="Stretch" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="2,0"
                                                          Width="16"
                                                          Height="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=ActualHeight}">
                                                        <Border VerticalAlignment="Bottom">
                                                            <Border.Height>
                                                                <MultiBinding Converter="{StaticResource RatioToHeightConverter}">
                                                                    <Binding Path="AmountBarRatio" />
                                                                    <Binding RelativeSource="{RelativeSource AncestorType=ItemsControl}" Path="ActualHeight" />
                                                                </MultiBinding>
                                                            </Border.Height>
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="SteelBlue" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsSelected}"
                                                                                     Value="True">
                                                                            <Setter Property="Background" Value="Red" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>

                                    <!-- X-axis labels -->
                                    <ItemsControl Grid.Row="1"
                                                  Grid.Column="1"
                                                  Margin="6,0,0,0"
                                                  ItemsSource="{Binding Items}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Width="16"
                                                        Height="150"
                                                        Margin="2,2,2,0"
                                                        ClipToBounds="True">
                                                    <TextBlock Text="{Binding GroupName}"
                                                               FontSize="9"
                                                               TextWrapping="NoWrap"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding GroupName}">
                                                        <TextBlock.LayoutTransform>
                                                            <RotateTransform Angle="-90" />
                                                        </TextBlock.LayoutTransform>
                                                    </TextBlock>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Right: summary table -->
            <DataGrid x:Name="StatsGrid"
                      Grid.Column="1"
                      ItemsSource="{Binding Items}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nhóm / Đơn vị"
                                        Binding="{Binding GroupName}"
                                        Width="2*" />
                    <DataGridTextColumn Header="Số khách"
                                        Binding="{Binding CustomerCount}"
                                        Width="*" />
                    <DataGridTextColumn Header="Tổng kWh"
                                        Binding="{Binding TotalConsumption, StringFormat=N0}"
                                        Width="*" />
                    <DataGridTextColumn Header="kWh tính tiền"
                                        Binding="{Binding TotalChargeableKwh, StringFormat=N0}"
                                        Width="*" />
                    <DataGridTextColumn Header="Tổng tiền (VNĐ)"
                                        Binding="{Binding TotalAmount, StringFormat=N0}"
                                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Totals + print/close -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <TextBlock Margin="0,0,16,0"
                           Text="{Binding GrandTotalConsumption, StringFormat='Tổng kWh: {0:N0}'}" />
                <TextBlock Margin="0,0,16,0"
                           Text="{Binding GrandTotalChargeableKwh, StringFormat='kWh tính tiền: {0:N0}'}" />
                <TextBlock Margin="0,0,16,0"
                           Text="{Binding GrandTotalAmount, StringFormat='Tổng tiền: {0:N0} VNĐ'}" />
            </StackPanel>

            <Button Content="In hóa đơn nhóm"
                    Width="120"
                    Margin="0,0,8,0"
                    Command="{Binding PrintGroupCommand}" />

            <Button Content="Đóng"
                    Width="90"
                    Command="{Binding CloseCommand}" />
        </StackPanel>
    </Grid>
</Window>
