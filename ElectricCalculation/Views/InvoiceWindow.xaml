<Window x:Class="ElectricCalculation.Views.InvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behaviors="clr-namespace:ElectricCalculation.Behaviors"
        mc:Ignorable="d"
        Title="Hóa đơn tiền điện"
        Height="450"
        Width="600"
        WindowStartupLocation="CenterOwner"
        behaviors:DialogCloser.DialogResult="{Binding DialogResult}">
    <Grid x:Name="InvoiceRoot" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border BorderBrush="Black"
                BorderThickness="1"
                Padding="16"
                Grid.Row="0">
            <StackPanel>
                <TextBlock Text="PHIẾU THU TIỀN ĐIỆN"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center" />

                <TextBlock Margin="0,8,0,0"
                           Text="{Binding PeriodLabel, StringFormat='Kỳ: {0}'}" />

                <TextBlock Margin="0,4,0,0"
                           Text="{Binding Customer.GroupName, StringFormat='Đơn vị: {0}'}" />
                <TextBlock Margin="0,2,0,0"
                           Text="{Binding Customer.Name, StringFormat='Tên khách: {0}'}" />
                <TextBlock Margin="0,2,0,0"
                           Text="{Binding Customer.Address, StringFormat='Địa chỉ: {0}'}" />
                <TextBlock Margin="0,2,0,0"
                           Text="{Binding Customer.Phone, StringFormat='Số ĐT: {0}'}" />
                <TextBlock Margin="0,2,0,0"
                           Text="{Binding Customer.MeterNumber, StringFormat='Số công tơ: {0}'}" />

                <Separator Margin="0,8,0,8" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding Customer.PreviousIndex, StringFormat='Chỉ số cũ: {0:N0}'}" />
                        <TextBlock Text="{Binding Customer.CurrentIndex, StringFormat='Chỉ số mới: {0:N0}'}" />
                        <TextBlock Text="{Binding Customer.Multiplier, StringFormat='Hệ số: {0:N2}'}" />
                        <TextBlock Text="{Binding Customer.SubsidizedKwh, StringFormat='Bao cấp (kWh): {0:N0}'}" />
                        <TextBlock Text="{Binding Customer.UnitPrice, StringFormat='Đơn giá (VNĐ/kWh): {0:N0}'}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{Binding Customer.Consumption, StringFormat='Điện năng (kWh): {0:N0}'}" />
                        <TextBlock Text="{Binding Customer.ChargeableKwh, StringFormat='KWh tính tiền: {0:N0}'}" />
                        <TextBlock Text="{Binding Customer.Amount, StringFormat='Thành tiền (VNĐ): {0:N0}'}"
                                   FontWeight="Bold" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="In"
                    Width="80"
                    Margin="0,0,8,0"
                    Command="{Binding PrintCommand}"
                    CommandParameter="{Binding ElementName=InvoiceRoot}" />
            <Button Content="Đóng"
                    Width="80"
                    Command="{Binding CloseCommand}" />
        </StackPanel>
    </Grid>
</Window>

