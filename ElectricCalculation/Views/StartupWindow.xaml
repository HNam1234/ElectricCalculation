<Window x:Class="ElectricCalculation.Views.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ElectricCalculation.ViewModels"
        xmlns:behaviors="clr-namespace:ElectricCalculation.Behaviors"
        mc:Ignorable="d"
        Title="Electric Calculation"
        Height="720"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F7F7F7"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    <Window.DataContext>
        <vm:StartupViewModel />
    </Window.DataContext>

    <Window.Resources>
        <SolidColorBrush x:Key="CardBg" Color="#FFFFFFFF" />
        <SolidColorBrush x:Key="CardBorder" Color="#FFE5E7EB" />
        <SolidColorBrush x:Key="TextPrimary" Color="#FF111827" />
        <SolidColorBrush x:Key="TextSecondary" Color="#FF4B5563" />
        <SolidColorBrush x:Key="TextMuted" Color="#FF6B7280" />
        <SolidColorBrush x:Key="HoverBg" Color="#FFF3F4F6" />
        <SolidColorBrush x:Key="PressedBg" Color="#FFE5E7EB" />
        <SolidColorBrush x:Key="Accent" Color="#FF2563EB" />

        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="18"
                          ShadowDepth="2"
                          Opacity="0.18"
                          Color="#000000" />

        <Style x:Key="ActionCardButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource CardBg}" />
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="14"
                                SnapsToDevicePixels="True"
                                Effect="{StaticResource CardShadow}">
                            <ContentPresenter Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBg}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource PressedBg}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconBadgeStyle" TargetType="{x:Type Border}">
            <Setter Property="Width" Value="46" />
            <Setter Property="Height" Value="46" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Background" Value="#FFEFF6FF" />
            <Setter Property="BorderBrush" Value="#FFD6E4FF" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style x:Key="IconGlyphStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="SectionCardStyle" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="{StaticResource CardBg}" />
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Effect" Value="{StaticResource CardShadow}" />
        </Style>

        <Style x:Key="SmallTextButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FFFFFFFF" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="6,2" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBg}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource PressedBg}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ListBox}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True" />
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling" />
        </Style>

        <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border x:Name="ItemBorder"
                                Background="{StaticResource CardBg}"
                                BorderBrush="{StaticResource CardBorder}"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="12">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource HoverBg}" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{StaticResource Accent}" />
                                <Setter TargetName="ItemBorder" Property="Background" Value="#FFEEF2FF" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ContextMenu}">
            <Setter Property="Background" Value="{StaticResource CardBg}" />
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="6" />
        </Style>
        <Style TargetType="{x:Type MenuItem}">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
            <Setter Property="Padding" Value="10,6" />
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Width="54"
                    Height="54"
                    CornerRadius="18"
                    Background="#FFFFFFFF"
                    BorderBrush="{StaticResource CardBorder}"
                    BorderThickness="1"
                    Margin="0,0,14,0"
                    Cursor="Hand"
                    ToolTip="Click me :)">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding OpenLogoUrlCommand}" />
                </Border.InputBindings>
                <TextBlock FontFamily="Segoe MDL2 Assets"
                           FontSize="26"
                           Foreground="{StaticResource Accent}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Text="&#xE945;" />
            </Border>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Electric Calculation"
                           Foreground="{StaticResource TextPrimary}"
                           FontSize="28"
                           FontWeight="SemiBold" />
                <TextBlock Text="Chọn nguồn dữ liệu để bắt đầu hoặc tiếp tục chỉnh sửa."
                           Foreground="{StaticResource TextSecondary}"
                           FontSize="13"
                           Margin="0,4,0,0" />
            </StackPanel>
        </Grid>

        <!-- Left: Actions -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,16,0">
            <Button Style="{StaticResource ActionCardButtonStyle}"
                    Command="{Binding CreateNewDatasetCommand}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Style="{StaticResource IconBadgeStyle}">
                        <TextBlock Style="{StaticResource IconGlyphStyle}" Foreground="{StaticResource Accent}" Text="&#xE710;" />
                    </Border>
                    <StackPanel Grid.Column="1" Margin="14,0,0,0">
                        <TextBlock Text="Tạo bộ dữ liệu mới"
                                   Foreground="{StaticResource TextPrimary}"
                                   FontSize="14"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="Chọn nhập tay hoặc import từ Excel."
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap" />
                        <TextBlock Text="Nhập tay: chỉ dùng cho bộ dữ liệu nhỏ (≤ 10 công tơ)."
                                   Foreground="{StaticResource TextMuted}"
                                   FontSize="11"
                                   Margin="0,6,0,0"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Button>

            <Button Style="{StaticResource ActionCardButtonStyle}"
                    Command="{Binding CreateNewPeriodFromDatasetCommand}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Style="{StaticResource IconBadgeStyle}">
                        <TextBlock Style="{StaticResource IconGlyphStyle}" Foreground="{StaticResource Accent}" Text="&#xE787;" />
                    </Border>
                    <StackPanel Grid.Column="1" Margin="14,0,0,0">
                        <TextBlock Text="Tạo tháng mới (từ bộ dữ liệu)"
                                   Foreground="{StaticResource TextPrimary}"
                                   FontSize="14"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="Chọn bộ dữ liệu tháng cũ và tạo tháng mới để nhập chỉ số."
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Button>

            <Button Style="{StaticResource ActionCardButtonStyle}"
                    Command="{Binding OpenSnapshotCommand}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Style="{StaticResource IconBadgeStyle}">
                        <TextBlock Style="{StaticResource IconGlyphStyle}" Foreground="{StaticResource Accent}" Text="&#xE7C3;" />
                    </Border>
                    <StackPanel Grid.Column="1" Margin="14,0,0,0">
                        <TextBlock Text="Mở Bộ dữ liệu(json)"
                                   Foreground="{StaticResource TextPrimary}"
                                   FontSize="14"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="Chọn file bộ dữ liệu (.json) để xem/sửa."
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Button>

            <Button Style="{StaticResource ActionCardButtonStyle}"
                    Command="{Binding OpenSnapshotFolderCommand}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Style="{StaticResource IconBadgeStyle}">
                        <TextBlock Style="{StaticResource IconGlyphStyle}" Foreground="{StaticResource Accent}" Text="&#xE838;" />
                    </Border>
                    <StackPanel Grid.Column="1" Margin="14,0,0,0">
                        <TextBlock Text="Mở thư mục bộ dữ liệu"
                                   Foreground="{StaticResource TextPrimary}"
                                   FontSize="14"
                                   FontWeight="SemiBold" />
                        <TextBlock Text="Mở thư mục lưu bộ dữ liệu trong Documents."
                                   Foreground="{StaticResource TextSecondary}"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>
            </Button>
        </StackPanel>

        <!-- Right: Recent datasets -->
        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource SectionCardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock DockPanel.Dock="Left"
                               Text="Bộ dữ liệu gần đây"
                               Foreground="{StaticResource TextPrimary}"
                               FontSize="16"
                               FontWeight="SemiBold" />
                    <Button DockPanel.Dock="Right"
                            Style="{StaticResource SmallTextButtonStyle}"
                            Content="Làm mới"
                            Command="{Binding RefreshSnapshotsCommand}" />
                </DockPanel>

                <Grid Grid.Row="1">
                     <ListBox x:Name="RecentSnapshotsList"
                              ItemsSource="{Binding RecentSnapshots}"
                              SelectedItem="{Binding SelectedSnapshot, Mode=TwoWay}"
                              behaviors:ListBoxRightClickSelectBehavior.IsEnabled="True"
                              behaviors:ListBoxDoubleClickCommandBehavior.Command="{Binding OpenSelectedSnapshotCommand}">
                        <ListBox.ContextMenu>
                            <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                <MenuItem Header="{Binding SelectedSnapshot.PinMenuText}"
                                          Command="{Binding TogglePinSelectedSnapshotCommand}"
                                          IsEnabled="{Binding SelectedSnapshot.CanTogglePin}" />
                                <MenuItem Header="Mở" Command="{Binding OpenSelectedSnapshotCommand}" />
                                <MenuItem Header="Xóa" Command="{Binding DeleteSelectedSnapshotCommand}" />
                            </ContextMenu>
                         </ListBox.ContextMenu>
                         <ListBox.InputBindings>
                             <KeyBinding Key="Enter" Command="{Binding OpenSelectedSnapshotCommand}" />
                             <KeyBinding Key="Delete" Command="{Binding DeleteSelectedSnapshotCommand}" />
                         </ListBox.InputBindings>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding DisplayTitle}"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   FontSize="13"
                                                   FontWeight="SemiBold" />

                                        <Border Grid.Column="1"
                                                Background="{StaticResource Accent}"
                                                CornerRadius="10"
                                                Padding="8,2"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center"
                                                ToolTip="Pinned">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="&#xE718;"
                                                           FontFamily="Segoe MDL2 Assets"
                                                           FontSize="12"
                                                           Foreground="White"
                                                           Margin="0,0,4,0"
                                                           VerticalAlignment="Center" />
                                                <TextBlock Text="PINNED"
                                                           FontSize="10"
                                                           FontWeight="SemiBold"
                                                           Foreground="White"
                                                           VerticalAlignment="Center" />
                                            </StackPanel>
                                            <Border.Style>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsPinned}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                    </Grid>
                                    <TextBlock Grid.Row="1"
                                               Text="{Binding DisplaySubtitle}"
                                               Foreground="{StaticResource TextSecondary}"
                                               FontSize="12"
                                               Margin="0,4,0,0" />
                                    <TextBlock Grid.Row="2"
                                               Text="{Binding Path}"
                                               Foreground="{StaticResource TextMuted}"
                                               FontSize="11"
                                               Margin="0,6,0,0"
                                               TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock IsHitTestVisible="False"
                               Foreground="{StaticResource TextMuted}"
                               FontSize="13"
                               TextWrapping="Wrap"
                               Text="Chưa có bộ dữ liệu nào. Hãy nhập Excel hoặc tạo dữ liệu mới."
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=RecentSnapshotsList, Path=HasItems}" Value="False">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
